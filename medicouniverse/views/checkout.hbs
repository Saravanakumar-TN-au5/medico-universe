                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#tabCheckoutPayment123"
                                            role="tab">3. Payment</a>
                                    </li>
                                </ul>
                                <!-- Pills panels -->
                                <div class="tab-content pt-4">
                                    <!--Panel 1-->
                                    <div class="tab-pane fade in show active" id="tabCheckoutBilling123"
                                        role="tabpanel">
                                        <!--Card content-->
                                        <form class="text-center" style="color: #757575;" method="POST"
                                            enctype="multipart/form-data" action="">
                                            <!--Grid row-->
                                            <div class="row">
                                                <!--Grid column-->
                                                <div class="col-md-6 mb-4">
                                                    <!--address-->
                                                    <label for="address" class=" ">Shipping Address</label>
                                                    <input type="text" id="address" name="address"
                                                        class="form-control mb-4" placeholder="1234 Main St">
                                                    <!--address-2-->
                                                </div>


                                            </div>


                                            <label for="email" class="">Email (optional)</label>
                                            <input type="text" id="email" name="email" class="form-control mb-4"
                                                placeholder="email@gmail.com">
                                            <!--firstName-->
                                            <label for="firstName" class="">Name</label>
                                            <input type="text" id="firstName" name="cardName" class="form-control">
                                            <label for="address-2" class="">Address 2 (optional)</label>
                                            <input type="text" id="address-2" class="form-control mb-4"
                                                placeholder="Apartment or suite">
                                            <input type="text" id="address-2" name="cardNumber"
                                                class="form-control mb-4" placeholder="Card Number">
                                            <!--Grid row-->

                                            <!--Grid row-->
                                            <hr>

                                            <div class="text-center">
                                                <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal"
                                                    data-target="#modalContactForm">
                                                    Click for Card Details</a>
                                            </div>
                                            <button type="submit">save</button>
                                            {{!-- <button class="btn btn-primary btn-lg btn-block" type="submit">Enter For
                                                Card Details
                                            </button> --}}
                                        </form>
                                    </div>

                                    <!--/.Panel 3-->
                                </div>
                                <!-- Pills panels -->
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-lg-4 mb-4">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Place order</button>
                                <!--Card-->
                                <div class="card z-depth-0 border border-light rounded-0">
                                    <!--Card content-->
                                    <div class="card-body">
                                        <h4 class="mb-4 mt-1 h5 text-center font-weight-bold">Summary</h4>
                                        <hr>
                                        <dl class="row">
                                            <dd class="col-sm-8 font-weight-bold">
                                                Total Items :
                                            </dd>
                                            <dd class="col-sm-4">
                                                â‚¹{{session.cart.totalQty}}
                                            </dd>
                                        </dl>
                                        <hr>

                                        <dl class="row">
                                            <dt class="col-sm-8">
                                                Total Amount
                                            </dt>
                                            <dt class="col-sm-4">
                                                {{total}}
                                            </dt>
                                        </dl>
                                    </div>
                                </div>
                                <!--/.Card-->
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                </div>
            </section>
            <!--Section: Content-->
        </div>



        <footer class="mt-4">
            <div style="height: 20px;"></div>
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12 ml-5">
